<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- name="helloDao"中`helloDao`的作用是让 Spring 的 IOC 容器在获取到名称后，将首字母大写，前面加 set
    找对应的`sethelloDao()`方法进行对象注入 -->
    <!-- ref="helloDao" 作用是让 Spring 能在 IOC 容器中找到 id 为`helloDao`的 Bean 对象给`helloService`进行注入 -->
    <bean id="helloDao" class="edu.note.spring.bean.xml.HelloDaoImpl" />
    <bean id="helloService" class="edu.note.spring.bean.xml.HelloServiceImpl">
        <property name="helloDao" ref="helloDao" />
    </bean>

</beans>